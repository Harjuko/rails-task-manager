<%= form_for @task do |f| %>
  <%= f.label :title, "Enter task title" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter task details" %>
  <%= f.text_field :details %>

  <%= f.label :completed, "is the task completed?" %>
  <%= f.check_box :completed, {}, true, false %>

  <%= f.submit class: "btn-primary" %>

<% end %>
